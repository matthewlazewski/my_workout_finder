<!DOCTYPE html>
<html>
  <head>
    <title>Myworkoutfinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu+Condensed&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper" role="navigation">
      <nav>
        <div class="container">
          <a class="navbar" href="<%= root_url %>"/>Home</a>
          <% if !current_user %>
            <a class="navbar" href="<%= new_user_path %>"/>Sign Up</a>
            <%= link_to "Log in", login_path, class:"navbar-brand" %>
          <% end %>
          <% if current_user %>
            <%= link_to "#{current_user.username}'s Profile", user_path(current_user), class:"navbar-brand"%>
            <%= link_to "All Users", users_path %>
            <%= link_to "Log Out", logout_path, class:"navbar-brand",method:'delete' %>
          <% end %>
        </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
